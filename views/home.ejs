  <form action="/users/transaction/create" method="POST">
    <label>Select Account Type</label>
    <br>
    <select class="custom-select col-3" onchange="toggle(this)" name="accounttype">
        
        <option value="cash">CASH</option>
        <option value="trf" >TRANSFER</option>
        <option value="card1">CARD 1</option>
        <option value="card2">CARD 2</option>
      </select>


    <div id="catogery-div" style="display: block"> 
        
      <label>Catogery</label>
      <br>
      <select class="custom-select col-3" name="catogery">
          
          <option value="income">Income</option>
          <option value="interest">Interest</option>
          <option value="loan">Loan</option>
          <option value="education">Education</option>
          <option value="food">Food</option>
      </select>
    </div>
    <div id="trf-div" style="display: none">
      <label>Select Source</label>
      <br>
      <select class="custom-select col-3" name="source">
        
        <option value="cash">CASH</option>
        <option value="card1">CARD 1</option>
        <option value="card2">CARD 2</option>
      </select>
      <br>

      <label>Select Destination</label>
      <br>
      <select class="custom-select col-3" name="destination">
        
        <option value="cash">CASH</option>
        <option value="card1">CARD 1</option>
        <option value="card2">CARD 2</option>
      </select>
    </div>

    <div class="form-group">
       <label>Enter amount</label>
       <input type="" class="form-control col-3" placeholder="Amount" name="amount">
       <input type="hidden" name="userid" value="<%= user._id %>">
    </div>
    <button type="submit" class="btn btn-black m-1">Submit</button>
   
 </form>

 <div id="transaction-container">
    <ul id="">
        <% for(transaction of transactions){ %>
           
            <h3><%=transaction.content%> -  <%= transaction.accounttype%>
              <a href="/users/transaction/delete/<%=transaction.id%>" style="display: inline">X</a>
            </h3>
            
            
           
        <% } %>
    </ul>
    <hr>
    <h1>Total Balance = <%= sum %></h1>
    <h2>Cash Balance = <%= cash %></h2>
    <h2>Card 1 Balance = <%= card1 %></h2>
    <h2>Card 2 Balance = <%= card2 %></h2>
</div>

